@model List<Registro>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="background-color:white;">Lista de solicitudes de compra</h1>

@if (Model.Count == 0) {
            
                <h3 class="text-center" style="background-color:white;">No se encuentran productos registrados, que esperas para registrar el tuyo.</h3>
            
        }


<div class="container">
        <div class="row"> 
            @foreach (var registro in Model){
            <div class="col-md-4" style="background:#ff6600; border:solid 10px #ccc; border-radius:15px; box-shadow: 0px 20px 15px -15px #818181;" >
            <p size=1>Nombre:@registro.Nombre</p>
            
            <p size=1>URL:@registro.Url</p>
            
            <p size=1>Descripcion:@registro.Descripcion</p>
            
            <p size=1>Precio:@registro.Precio</p>
           
            <p size=1>Celular@registro.Celular</p>
           
            <p size=1>Lugar:@registro.Lugar</p>
           
            <p size=1>Usuario:@registro.NombreUsuario</p>
            
            <br>
            </div>
            <br>
            }
        </div>
    </div>
</div>
